@model IEnumerable<EmployeePortal.Models.EmployeeViewModel>

<h2>Employee List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create New</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Hire Date</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Name</td>
                <td>@emp.Email</td>
                <td>@emp.HireDate.ToShortDateString()</td>
                <td>@emp.DepartmentName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@emp.EmployeeId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@emp.EmployeeId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
