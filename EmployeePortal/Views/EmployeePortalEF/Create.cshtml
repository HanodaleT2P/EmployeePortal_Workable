@using EmployeePortal.Models.EmployeePortalEF
@model EmployeePortal.Models.EmployeePortalEF.EmployeeEFCreateViewModel


<div class="container mt-5">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-primary text-white text-center">
            <h4 id="formTitle" class="mb-0">@((Model.Employee.EmployeeId > 0) ? "Edit Employee" : "Create Employee")</h4>
        </div>
        <div class="card-body">
            <form id="employeeForm" asp-action="@((Model.Employee.EmployeeId > 0) ? "Edit" : "Create")" asp-controller="EmployeePortalEF" method="post">
                <input type="hidden" asp-for="Employee.EmployeeId" />

                <div id="alertPlaceholder"></div>

                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="Employee.Name" class="form-label fw-bold">Name</label>
                        <input asp-for="Employee.Name" class="form-control" placeholder="Enter employee name" />
                        <span asp-validation-for="Employee.Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Employee.Email" class="form-label fw-bold">Email</label>
                        <input asp-for="Employee.Email" type="email" class="form-control" placeholder="Enter email address" />
                        <span asp-validation-for="Employee.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <label asp-for="Employee.HireDate" class="form-label fw-bold">Hire Date</label>
                        <input asp-for="Employee.HireDate" type="date" class="form-control"
                               /> <span asp-validation-for="Employee.HireDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Employee.DepartmentId" class="form-label fw-bold">Department</label>
                        <select asp-for="Employee.DepartmentId" asp-items="Model.Department" class="form-select">
                            <option value="">-- Select Department --</option>
                        </select>
                        <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 text-center">
                    <button type="submit" id="submitbtn" class="btn btn-success px-4">@((Model.Employee.EmployeeId > 0) ? "Update Employee" : "Save Employee")</button>
                    <a href="/EmployeePortalEF/Index" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title text-dark fw-bold">Confirm Submission</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <p id="confirmMessage" class="fs-5">Are you sure you want to proceed?</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="confirmSubmit">Yes, Submit</button>
            </div>
        </div>
    </div>
</div>


<!-- Bootstrap & jQuery -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
      $(document).ready(function () {
        let isUpdate = $('#employeeForm input[name="Employee.EmployeeId"]').val() > 0; // Check if editing

        $('#confirmMessage').text(isUpdate ? "Are you sure you want to update this employee?" : "Are you sure you want to save this employee?");

        $('#employeeForm').on('submit', function (e) {
            e.preventDefault();

            let isValid = true;
            let name = $('#Employee_Name').val().trim();
            let email = $('#Employee_Email').val().trim();
            let hireDate = $('#Employee_HireDate').val().trim();
            let deptId = $('#Employee_DepartmentId').val();

            if (!name) { $('#Employee_Name').addClass('is-invalid'); isValid = false; } else { $('#Employee_Name').removeClass('is-invalid'); }
            if (!email) { $('#Employee_Email').addClass('is-invalid'); isValid = false; } else { $('#Employee_Email').removeClass('is-invalid'); }
            if (!hireDate) { $('#Employee_HireDate').addClass('is-invalid'); isValid = false; } else { $('#Employee_HireDate').removeClass('is-invalid'); }
            if (!deptId) { $('#Employee_DepartmentId').addClass('is-invalid'); isValid = false; } else { $('#Employee_DepartmentId').removeClass('is-invalid'); }

            if (!isValid) return;

            $('#confirmModal').modal('show');

            $('#confirmSubmit').off('click').on('click', function () {
                $('#confirmModal').modal('hide');
                document.getElementById('employeeForm').submit();
            });
        });
    });

</script>
