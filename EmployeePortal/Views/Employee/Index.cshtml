@model List<EmployeePortal.Models.Employee>

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<style>
    .card-container {
        max-height: 500px;
        overflow-y: auto;
        background-color: #f8f9fa;
        padding: 15px;
    }
</style>

<h2>Employees</h2>
<a href="/Employee/Create" class="btn btn-success mb-3">Add New</a>

<!-- Tabs -->
<ul class="nav nav-tabs" id="employeeTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="table-tab" data-toggle="tab" href="#tableView" role="tab">Table View</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="card-tab" data-toggle="tab" href="#cardView" role="tab">Card View</a>
    </li>
</ul>

<!-- Tab Content -->
<div class="tab-content" id="employeeTabContent">
    <!-- Table View -->
    <div class="tab-pane fade show active pt-3" id="tableView" role="tabpanel">
        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Name</th>
                    <th>Department</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr id="row-@emp.Id">
                        <td>@emp.Name</td>
                        <td>@emp.Department</td>
                        <td>@emp.Email</td>
                        <td>
                            <a href="/Employee/Details/@emp.Id" class="btn btn-sm btn-info">Details</a>
                            <a href="/Employee/Edit/@emp.Id" class="btn btn-sm btn-warning">Edit</a>
                            <button class="btn btn-sm btn-danger delete-btn" data-id="@emp.Id">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Card View -->
    <div class="tab-pane fade pt-3" id="cardView" role="tabpanel">
        <div class="container-fluid card-container">
            <div class="row">
                @foreach (var emp in Model)
                {
                    <div class="col-md-3 mb-4" id="card-@emp.Id">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title">@emp.Name</h5>
                                    <p class="card-text">Department: @emp.Department</p>
                                    <button class="btn btn-sm btn-primary show-email mb-2">Show Email</button>
                                    <p class="email-text" style="display:none;">@emp.Email</p>
                                </div>
                                <div class="mt-3">
                                    <a href="/Employee/Edit/@emp.Id" class="btn btn-sm btn-warning mr-2">Edit</a>
                                    <button class="btn btn-sm btn-danger delete-btn" data-id="@emp.Id">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Optional Modal -->
<div class="modal fade" id="AddEmployee" tabindex="-1" role="dialog" aria-labelledby="AddEmployeeLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Employee</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Modal body placeholder â€” for AJAX forms in future.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- jQuery Scripts -->
<script>
    $(document).ready(function () {
        // Toggle email in card view
        $('.show-email').click(function () {
            $(this).siblings('.email-text').toggle();
        });

        // AJAX Delete
        $('.delete-btn').click(function () {
            const id = $(this).data('id');

            if (confirm('Are you sure you want to delete this employee?')) {
                $.ajax({
                    url: '/Employee/Delete/' + id,
                    method: 'POST',
                    success: function () {
                        $('#row-' + id).remove();    // Table row
                        $('#card-' + id).remove();   // Card block
                        alert('Employee deleted successfully.');
                    },
                    error: function () {
                        alert('Error deleting employee.');
                    }
                });
            }
        });
    });
</script>